    "version": "0.2.0",
    "configurations": [   
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/app_host",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Attach to gdbserver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/app_target",
            "cwd": "${workspaceRoot}",
            "stopAtEntry": true,
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "remote": true,
            "miDebuggerServerAddress": "192.168.1.10:8888",
        }                     
                    

    ]
}